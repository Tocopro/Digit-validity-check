#include <iostream>
using namespace std;

int main()
        {
         char digit;
        int checksum = 0;
        cout << "Enter a  six digit number: " ;
        for (int position = 1; position <= 6; position++)
        {
            cin >> digit;
            checksum += digit - '0';

        }
        cout << checksum;
        if (checksum % 10 == 0)
        {
            cout << "  Checksum is divisible by 10. Therefore it is a valid number. \n";
        } else
        {
            cout << "  Checksum is not divisible by 10. Therefore it is not a valid number.\n";
        }

        };
        
        
        #include <iostream>
using namespace std;

int main()
        {
         char digit;
        int checksum = 0;
        int doubleDigitValue = 0;
        cout << "Enter a  six digit number: " ;
        for (int position = 1; position <= 6; position++)
        {
            cin >> digit;

            if (position % 2 == 0)
            {
                checksum += digit - '0';
            } else
            {
                checksum += (digit - '0') * 2;
            }

        }
        cout << checksum;
        /*
        if (checksum % 10 == 0)
        {
            cout << "  Checksum is divisible by 10. Therefore it is a valid number. \n";
        } else
        {
            cout << "  Checksum is not divisible by 10. Therefore it is not a valid number.\n";
        }*/

        };
        
        #include <iostream>
using namespace std;

int main()
{
    char digit;
    int checksum = 0;
    int position = 1;
    cout << "Enter a number with an even number of digits: ";
    digit = cin.get();
    while(digit != 10) {
        if (position % 2 == 0)
        {checksum += digit - '0';}
        else
        {checksum += 2 * (digit - '0');}
        digit = cin.get();
        position++;

    }
    cout << "Checksum is " << checksum << ". \n";
    if (checksum % 10 == 0)
    {
        cout << "Checksum is divisible by 10. Valid. \n";
    } else
    {
        cout << "Checksum is not divisible by 10. Invalid. \n";
    }

    return 0;
}


#include <iostream>
#include<string>
using namespace std;

int main()
{
    string numbers;
    cout << "Enter four numbers" ;
    cin >> numbers;
    cout << "Input length is " << numbers.length() << "\n";
    if (numbers.length() == 8)
    {
        cout << numbers <<  " is Valid Number";
    } else
    {
        cout << numbers << " is invalid";
    }
    return 0;
}



